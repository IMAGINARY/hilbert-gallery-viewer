{
  "name": "hilbert-gallery-viewer",
  "version": "0.0.0",
  "description": "Viewer component for hilbert-gallery",
  "author": {
    "name": "Christian Stussak",
    "email": "christian.stussak@imaginary.org"
  },
  "repository": "https://github.com/IMAGINARY/hilbert-gallery-viewer",
  "bugs": {
    "url": "https://github.com/IMAGINARY/hilbert-gallery-viewer/issues",
    "email": "christian.stussak@imaginary.org"
  },
  "license": "MIT",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "browserslist": [
    "> 0.2%",
    "not dead",
    "Chrome 56"
  ],
  "source": "src/library/ts/index.ts",
  "main": "dist/library/hilbert-gallery-viewer.cjs",
  "browser": "dist/library/hilbert-gallery-viewer.js",
  "module": "dist/library/hilbert-gallery-viewer.mjs",
  "types": "dist/library/hilbert-gallery-viewer.d.ts",
  "targets": {
    "demo": {
      "source": "/src/demo/html/index.html",
      "distDir": "dist/demo",
      "isLibrary": false,
      "context": "browser",
      "engines": {
        "browsers": [
          "> 0.2%",
          "not dead",
          "Chrome 56"
        ]
      }
    },
    "main": {},
    "browser": {},
    "module": {},
    "types": {}
  },
  "devDependencies": {
    "@parcel/packager-ts": "2.5.0",
    "@parcel/transformer-inline-string": "2.5.0",
    "@parcel/transformer-sass": "2.5.0",
    "@parcel/transformer-typescript-tsc": "2.5.0",
    "@parcel/transformer-typescript-types": "2.5.0",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "assert": "^2.0.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-typescript": "^16.1.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "parcel": "2.5.0",
    "prettier": "^2.5.1",
    "process": "^0.11.10",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@swc/helpers": "^0.4.0",
    "@types/assert": "^1.5.6",
    "@types/document-ready": "^2.0.0",
    "document-ready": "^2.0.2"
  },
  "scripts": {
    "serve": "parcel serve --dist-dir dist-dev --target demo",
    "watch": "parcel watch",
    "build": "rm -r dist; parcel build --public-url .",
    "build:library": "rm -r dist/library; parcel build --public-url . --target main --target browser --target module --target types",
    "build:demo": "rm -r dist/demo; parcel build --public-url . --target demo",
    "format": "prettier --write '.'",
    "doc": "typedoc",
    "lint": "cd src/ && eslint '{**/*,*}.{js,ts,jsx,tsx}'",
    "lint:fix": "cd src/ && eslint --fix '{**/*,*}.{js,ts,jsx,tsx}'",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
